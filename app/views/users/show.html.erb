<div class="container">
  <div class="row">
    <div class="col-md-3 mt-3">
     <div>
       <h2>User Info</h2>
        <div><%= image_tag @user.get_profile_image(100, 100) %></div>
        <table class="table table-inverse">
         <tr><th>name</th><th><%= @user.name %></th></tr>
         <tr class="p-5"><th>introduction</th><th><%= @user.introduction %></th></tr>
        </table>
     </div>

        <div type="button">
          <%= link_to(edit_user_path(@user), class: "btn btn-outline-secondary btn-block") do %>
             <i class="fa-solid fa-user-gear"></i>
          <% end %>
        </div>


         <%= render 'books/new' %>
    </div>

    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
       <table class="table table-hover table-inverse">

         <tr>
           <th></th><th>Title</th><th>Opinion</th>
         </tr>

         <% @user.books.each do |book| %>
         <tr>
           <td><%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(@user.id) %></td>
           <td><%= link_to book.title, book_path(book.id) %></td>
           <td><%= book.body %></td>
         </tr>
         <% end %>
       </table>
     </div>
  </div>
</div>


