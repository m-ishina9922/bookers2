<div class="container">
  <div class="row">
    <div class="col-md-3 mt-3">
     <div>
       <h2>User Info</h2>
        <div><%= image_tag @user.get_profile_image(100, 100) %></div>
        <table class="table table-hover table-inverse">
         <tr><th>name</th><th><%= @user.name %></th></tr>
         <tr class="p-5"><th>introduction</th><th><%= @user.introduction %></th></tr>
        </table>
     </div>
         <a><%= link_to(edit_user_path(@user), class: "fa-regular fa-pen-to-square btn btn-outline-secondary btn-block") do %></a>
            <% end %>
     <div>
      <%= render 'books/new' %>
     </div>
    </div>

    <div class="col-md-8 offset-md-1 mt-3">
      <h2>Books</h2>
       <table class="table table-hover table-inverse">

         <tr>
           <th></th><th>Title</th><th>Opinion</th>
         </tr>

         <% @user.books.each do |book| %>
         <tr>
           <td><%= image_tag book.user.get_profile_image(100,100) %></td>
           <td><%= link_to book.title, book_path(book.id) %></td>
           <td><%= book.body %></td>
         </tr>
         <% end %>
       </table>


     </div>

  </div>
</div>