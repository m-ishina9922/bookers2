<div class="container">
  <div class="row">
    <h2>New book</h2>
     <%= form_with model: Book.new, url: books_path do |f| %>

      <p class="mt-3">Title</p>
      <%= f.text_field :title, class: "form-control" %>

      <p class="mt-3">Opinion</p>
      <%= f.text_area :body, class: "form-control" %>

      <%= f.submit 'Create Book', class: "bg-success text-white border-0 rounded p-1 mt-3" %>
     <% end %>
  </div>
</div>
